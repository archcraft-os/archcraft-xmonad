#!/usr/bin/env bash

## Copyright (C) 2020-2023 Aditya Shakya <adi1090x@gmail.com>

DIR="$HOME/.xmonad"

rofi \
	-show drun \
	-modi run,drun,ssh,window \
	-no-lazy-grab \
	-scroll-method 0 \
	-drun-match-fields all \
	-drun-display-format "{name}" \
	-no-drun-show-actions \
	-terminal alacritty \
	-kb-cancel Alt-F1 \
	-theme "$DIR"/rofi/themes/launcher.rasi
